@model PIS_Lab4.Models.PhoneBook
@{
    ViewBag.Title = "Create PhoneBook";
}


<div class="d-flex align-items-center justify-content-center pt-md-5 mt-5">

    <form action="Create" method="post">
        <div class="p-4 border border-2" style="width:600px">

            <div class="row pb-2">
                <h2 class="text-primary text-center">Create PhoneBook</h2>
            </div>

            <div class="mb-3">
                <div class="form-group">
                    <label class="control-label fs-5">Name</label>
                    <input class="form-control" name="Name" required />
                </div>
            </div>

            <div class="mb-3">
                <div class="form-group">
                    <label class="control-label fs-5">Surname</label>
                    <input class="form-control" name="Surname" required />
                </div>
            </div>

            <div class="mb-4">
                <div class="form-group">
                    <label class="control-label fs-5">
                        Phone Number
                        <small class="m-2 text-info">+375(XX)XXX-XX-XX</small>
                    </label>
                    <input class="form-control" name="PhoneNumber" pattern="\+375[2349]{2}[0-9]{7}" required />
                </div>
            </div>


            <div class="d-flex justify-content-around">
                <input type="submit"
                       class="btn btn-success p-2 fs-6"
                       style="width: 200px" value="Create" />
                <a href="/./" class="btn btn-secondary p-2 fs-6" style="width: 200px">Back to list</a>
            </div>

        </div>
    </form>
</div>
