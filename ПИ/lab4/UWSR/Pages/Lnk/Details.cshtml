@page
@model UWSR.Pages.Lnk.DetailsModel
@using UWSR.Utils

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<a>
    <h4>Link</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Minus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link.Minus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Plus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link.Plus)
        </dd>
    </dl>
</a>
<div>
    <a asp-page="../Cmnt/Create" asp-route-id="@Model.Link?.Id">Create comment</a>
</div>
<div class="row">
    @foreach (var item in Model.Link.Comments)
    {
        <div style="border: 1px solid black; display: flex;">
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.SessionId) *@
            @* </td> *@
            <div style="width: 200px">
                @Html.DisplayFor(modelItem => item.Stamp)
            </div>
            <div style="width: 33%">
                @Html.DisplayFor(modelItem => item.Text)
            </div>
            <div>
                @if (Security.CheckIsCommentUser(this.HttpContext, item) || Security.CheckIsAdmin(this.HttpContext))
                {
                    <a asp-page="../Cmnt/Edit" asp-route-id="@item.Id">Edit</a>;
                    <a asp-page="../Cmnt/Delete" asp-route-id="@item.Id">Delete</a>;
                }
                <a asp-page="../Cmnt/Details" asp-route-id="@item.Id">Details</a>
            </div>
        </div>
    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
